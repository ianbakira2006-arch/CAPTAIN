<div class="container" id="checker">
    <h2>Step 1: Quick Eligibility Checker</h2>
    <div class="tool-box">
        <label>Enter Your Age:</label>
        <input type="number" id="age" placeholder="e.g. 21">
        
        <label>Gender:</label>
        <select id="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>

        <label>Height (cm):</label>
        <input type="number" id="height" placeholder="e.g. 170">

        <button onclick="checkEligibility()">Check My Status</button>
        <div id="result"></div>
    </div>
</div>

